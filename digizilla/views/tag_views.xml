<odoo>
    <record id="tag_view_tree" model="ir.ui.view">
        <field name="name">Tag Tree View</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <record id="tag_view_form" model="ir.ui.view">
        <field name="name">Tag Form View</field>
        <field name="model">tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" />
                        <h1>
                            <field name="name" />
                        </h1>
                    </div>
                    <group>
                        <field name="digizilla_ids" widget="many2many_tags"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="tag_action" model="ir.actions.act_window">
        <field name="name">Tag</field>
        <field name="res_model">tag</field>
    </record>

    <menuitem
        id="tag_menu_item"
        name="Tags"
        parent="digizilla_menu"
        action="tag_action"
        sequence="2"
    />
</odoo>